alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias df='df -h'
alias du='du -h'
alias diff='diff -uprN --color'
psfu='ps fu --ppid 2 -p 2 --deselect'
alias grep='grep --color'
alias egrep='egrep --color'
alias ssh='TERM=xterm-256color ssh'
alias klog='dmesg --color=always | less -R'
alias mdkir='mkdir'

